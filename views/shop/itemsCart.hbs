{{# if products}}
    <table class="table table-striped table-hover table-bordered">
        <tbody>
        <tr>
            <th>Item</th>
            <th>QTY</th>
            <th>modify</th>
            <th>Unit Price</th>
        </tr>
    {{# each products }}
        <tr>
            <td><strong>{{ this.item.title }}</strong></td>
            <td>{{ this.qnty }} <a href="#">    </a></td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-primary btn -xs dropdown-toogle"  type="button" data-toggle="dropdown">Action<span class="caret"></span> </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Reduce by 1</a> </li>
                        <li><a href="#">Remove All</a> </li>
                    </ul>
                </div>
                </td>
            <td>${{ this.price }}</td>
        </tr>

    {{/each }}
        <tr>
            <th colspan="3"><span class="pull-right">Total</span></th>
            <th>${{ this.totalPrice }}</th>
        </tr>
        <tr>
            <td><a href="/" class="btn btn-primary">Continue Shopping</a></td>
            <td colspan="3"><a href="/shop/checkout" class="pull-right btn btn-success">Checkout</a></td>
        </tr>

        </tbody>
    </table>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}

