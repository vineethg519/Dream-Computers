{{#  each product }}
 <div class="row">
     {{# each this }}
         <div class="col-md-4 col-md-4 col-md-4">
             <div class="thumbnail">
                 <img src="{{ this.imagePath }}">
                 <div class="caption">
                     <h3>{{ this.title }}.</h3>
                     <p class="description">{{this.description}}</p>
                     <div class="clearfix">
                         <div class="price pull-left">${{ this.price }}</div>
                         <a href="/addProduct/{{ this.id }}" class="btn btn-success pull-right" role="button">Add to Cart</a>
                     </div>
                 </div>
             </div>
         </div>
     {{/each}}


 </div>
{{/each}}

